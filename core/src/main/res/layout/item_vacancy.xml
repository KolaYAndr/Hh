<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_darker_gray_rounded_corner_8"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/vacancyLookingNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="2.8dp"
                android:layout_marginBottom="10dp"
                android:textColor="#4CB24E"
                android:textSize="14sp"
                tools:text="Сейчас просматривает 1 человек" />


            <TextView
                android:id="@+id/vacancyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3.2dp"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="UI/UX Designer" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/likeImageButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/like"
            tools:src="@drawable/like_outlined" />
    </LinearLayout>

    <TextView
        android:id="@+id/vacancyCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="2.8dp"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        tools:text="Минск" />

    <TextView
        android:id="@+id/vacancyCompanyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:drawablePadding="8dp"
        android:lineSpacingExtra="2.8dp"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:drawableEndCompat="@drawable/verified"
        tools:text="Монобрикс" />

    <TextView
        android:id="@+id/vacancySalary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="4dp"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:text="1500-2900 Br" />

    <TextView
        android:id="@+id/vacancyExperience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawablePadding="8dp"
        android:lineSpacingExtra="2.8dp"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:drawableStartCompat="@drawable/resource_case"
        tools:text="Опыт от 1 года до 3 лет" />

    <TextView
        android:id="@+id/vacancyPostedAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="2.8dp"
        android:textColor="#858688"
        android:textSize="14sp"
        tools:text="Опубликовано 20 февраля" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/button_default"
        android:gravity="center"
        android:lineSpacingExtra="4.2dp"
        android:text="@string/respond"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="14sp" />
</LinearLayout>